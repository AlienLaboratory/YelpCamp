<% include ../partials/header %>


<div class="container">
	<header class="jumbotron">
		<div class="container"> 
			<h1> Welcome to a campground! </h1>
			<p>
				<a class="btn btn-primary btn-large" href="campgrounds/new"> Add new campground </a>
			</p>
		</div>
	</header>

	<div class="row text-center" style="display:flex; flex-wrap:wrap;">
		<% campgrounds.forEach(function(camp){ %>
			<div class="col-md-3 col-sm-6">
			<div class="card m-1">
				<div class="card-title"><strong><%=camp.name%></strong> </div>
				<img class="card-img-top" src=<%=camp.image%> >
				<a href="/campgrounds/<%=camp._id %>" class="btn btn-primary" > Show more </a>
			</div>
			</div>
		<% }) %>
	</div>
</div>


<% include ../partials/footer %>