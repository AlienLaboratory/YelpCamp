<% include ../partials/header %>
<div class="container new-camp-container" >


	<div class="new-camp-form" >
		<h3> Add new campground </h3>
		<form method="POST" action="/campgrounds">
			<div class="form-group">
				<input class="form-control" type="text" placeholder="user name" name="name">
			</div>
			<div class="form-group">
				<input class="form-control" type="text" placeholder="user image" name="image">
			</div>
			<div class="form-group">
					<input class="form-control" type="number" placeholder="price" name="price" min="0.01" step="0.01">
				</div>
			<div class="form-group">
				<input class="form-control" type="text" placeholder="user description" name="description">
			</div>
			<div class="form-group">
				<button class="btn btn-success btn-block" type="submit"> Add </button>
			</div>
		 </form>
		 <a href="/campgrounds"> Go back </a>
	 </div>
 <% include ../partials/footer %>
 </div>