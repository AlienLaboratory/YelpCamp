	<h1> Add new comment to <%= campground.name %> </h1>
	<div class="" style="width:30%; margin: 0 auto;">
		<form method="POST" action="/campgrounds/<%=campground._id%>/comments">
			<div class="form-group">
				<input class="form-control" type="text" placeholder="text" name="comment[text]">
			</div>
			<div class="form-group">
				<button class="btn btn-success btn-block" type="submit"> Add </button>
			</div>
		 </form>
		 <a href="/campgrounds"> Go back </a>
	 </div>
 <% include ../partials/footer %>
 </div>