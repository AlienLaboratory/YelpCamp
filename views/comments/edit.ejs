<% include ../partials/header %>
<div class="container new-comment-container">
	<div class="new-comment-form">
		<h3> Edit comment for <%= campground.name %> </h3>
		<form method="POST" action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=PUT">
			<div class="form-group">
				<input class="form-control" type="text"  name="comment[text]" value=<%=comment.text%>>
			</div>
			<div class="form-group">
				<button class="btn btn-success btn-block" type="submit"> Edit </button>
			</div>
		 </form>
		 <a href="/campgrounds"> Go back </a>
	 </div>
 <% include ../partials/footer %>
 </div>