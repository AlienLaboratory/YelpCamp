<% include ../partials/header %>
<div class="container">
	<h1> Edit comment for <%= campground.name %> </h1>
	<div class="" style="width:30%; margin: 0 auto;">
		<form method="POST" action="/campgrounds/<%=campground._id%>/comments/<%=comment._id%>?_method=PUT">
			<div class="form-group">
				<input class="form-control" type="text"  name="comment[text]" value=<%=comment.text%>>
			</div>
			<div class="form-group">
				<button class="btn btn-success btn-block" type="submit"> Edit </button>
			</div>
		 </form>
		 <a href="/campgrounds"> Go back </a>
	 </div>
 <% include ../partials/footer %>
 </div>